<h2><i class="icon-book muted"></i>&nbsp;{{t entry.title}}</h2>

<table class="table table-hover">
	<thead>
		<tr>
			<th>{{t entry.term}}</th>
			<th>{{t language.title}}</th>
		</tr>
	</thead>
	<tbody>
		{{#if content.isLoaded}}
			{{#each entry in controller}}
				<tr>		
					<td>{{#linkTo 'entries.show' entry}}{{entry.term}}{{/linkTo}}</td>
					<td>{{entry.language.fullName}}</td>
				</tr>
			{{else}}
				<tr>
					<td colspan="2">
					<p class="muted">No terms have been entered</p>
					</td>
				</tr>
			{{/each}}
		{{else}}
			<tr>
				<td colspan="2">
					<i class="icon-spin icon-spinner icon-large"></i> Loading...
				</td>
			</tr>
		{{/if}}
	</tbody>
</table>