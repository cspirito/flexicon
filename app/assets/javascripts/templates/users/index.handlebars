<h2><i class="icon-group muted"></i>&nbsp;{{t user.title}}</h2>

<table class="table table-hover">
	<thead>
		<tr>
			<th>{{t user.name}}</th>
			<th>{{t user.email}}</th>
		</tr>
	</thead>
	<tbody>
		{{#each user in controller}}
			<tr>		
				<td>{{#linkTo 'users.show' user}}{{user.name}}{{/linkTo}}</td>
				<td>{{user.email}}</td>
			</tr>
		{{else}}
			<tr>
				<td colspan="2">
					<i class="icon-spin icon-spinner icon-large"></i> Loading...
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>