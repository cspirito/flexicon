<form>
  <fieldset>
    <div class="new-comment"><p>{{t comment.new}} {{#if FlexiconEmber.Auth.user.name}}
        {{FlexiconEmber.Auth.user.name}}
      {{else}}
        {{FlexiconEmber.Auth.user.email}}
      {{/if}}:</p>
      {{view Ember.TextArea valueBinding='comment' name='comment' viewName='commentField' rows="4" class='input input-xxlarge'}}
    </div>
    <a href='#' {{action create}} class='btn btn-success'><i class="icon-plus-sign"></i>&nbsp;{{t send}}</a>
  </fieldset>
</form>