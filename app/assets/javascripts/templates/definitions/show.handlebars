<div class="row definition">
  <div class="span8">
    <h2>{{text}}</h2>
    <div class="definition-rating">
      <span class="rate-up" title="Up-vote this comment" {{action upvote}}>
        <i class="icon-chevron-up"></i> {{votes_for}} </span>|
      <span class="rate-down" title="Down-vote this comment" {{action downvote}}>
        <i class="icon-chevron-down"></i> {{votes_against}}</span>
    </div>
    <p>{{#linkTo "users.show" user}}{{user.name}}{{/linkTo}}
       <span class="muted smaller" title="Created at {{unbound created_at}}">{{parseShortDate created_at}}</span>
    </p>
  </div>
</div>

{{render "artifacts.index" artifacts}}

{{#if FlexiconEmber.Auth.signedIn}}
<h5>{{#linkTo "artifacts.new" this class='add-artifact'}}
	  <i class="icon-plus-sign"></i>&nbsp;{{t artifact.add}}
	{{/linkTo}}
</h5>
{{/if}}
