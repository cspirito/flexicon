<h2>{{t entry.new}}</h2>
<form>
    <div>
      <label {{bindAttr for="firstNameField.field_id"}}>{{t entry.term}}</label>
      {{view Ember.TextField valueBinding='term' name='term' viewName='firstNameField'}}
    </div>
    <div>
      <label {{bindAttr for='languageFld.elementId'}}>{{t language.title}}</label>
      {{view Ember.Select contentBinding="controller.languages" 
		 	 			  valueBinding='language' 
						  name='language'
						  optionValuePath="content"
 						  optionLabelPath="content.fullName"
						  viewName='languageFld'
						  class='input input-xxlarge'}}
    </div>
	<button {{action create}} class="btn btn-success"><i class="icon-plus-sign"></i>&nbsp;{{t send}}</button>
</form>